page {
  background-color: #f3f3f3;
}

.profilebox {
  display: flex;
  justify-content: space-between;
  margin: 10px;
  padding: 15px;
  border-radius: 6px;
  background-color: #3498db;
  color: #fff;
  box-shadow: 0 2px 4px #808080;
}

.face {
  background-color: red;
  width: 50px;
  height: 50px;
  border-radius: 75px;
  border: solid 2px #fff;
}

.greettext {
  display: block;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 460rpx;
}

.myclasses {
  display: block;
  font-size: 0.8rem;
  color: #f7f7f7;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 460rpx;
}

.tabcardbox {
  margin: 20px 0;
}

.tabcard {
  display: flex;
  align-items: top;
  padding: 10px 16px;
  border-bottom: solid 1px #dfdfdf;
  background-color: #fff;
}

.tabcard:last-child {
  border: none;
}

.icon {
  margin-right: 5px;
  width: 1.4rem;
  height: 1.4rem;
}

.logout-button {
  background-color: #e74c3c;
  color: #fff;
  margin: 10px;
  font-size: 1rem;
}