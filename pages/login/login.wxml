<view class="backgroundbox">
  <image mode="widthFix" class="background" src="/resource/bg.png"/>
</view>
<view class="login-body">
  <image class="logo"/>
  <text class="login-title">登录</text>
  <view class="loginbox">
    <input class="login-input" bindinput="inputUsername" type="text" placeholder="用户名" />
    <input class="login-input" bindinput="inputPassword" type="password" placeholder="密码" />
    <button class="login-button" bindtap="calllogin">→</button>
    <view class="textbox">
      <text class="login-helptext" bindtap="toHelp">登录帮助</text>
      <text class="login-helptext" bindtap="toHelp">常见问题</text>
    </view>
  </view>
</view>